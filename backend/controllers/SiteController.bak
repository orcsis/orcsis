<?php
namespace backend\controllers;

use Yii;
use yii\filters\AccessControl;
use yii\web\Controller;
use common\models\LoginForm;
use yii\filters\VerbFilter;
use yii\web\Response;

/**
 * Site controller
 */
class SiteController extends Controller
{

    /**
     * @inheritdoc
     */
    public function behaviors()
    {
        return [
            'access' => [
                'class' => AccessControl::className(),
                'rules' => [
                    [
                        'actions' => ['login', 'error'],
                        'allow' => true,
                    ],
                    [
                        'actions' => ['logout', 'index'],
                        'allow' => true,
                        'roles' => ['@'],
                    ],
                ],
            ],
            'verbs' => [
                'class' => VerbFilter::className(),
                'actions' => [
                    'logout' => ['post'],
                    'login' => ['post'],
                ],
            ],
        ];
    }

    /**
     * @inheritdoc
     */
    public function actions()
    {
        return [
            'error' => [
                'class' => 'yii\web\ErrorAction',
            ],
        ];
    }

    public function actionIndex()
    {
        return $this->render('index');
    }

    /**
     * Realiza el login y retorna el token de autenticaci칩n
     * Usuario y contrase침a por POST requerido
     * @return \yii\db\ActiveRecordInterface usuario que ser치 utilizado
     */
    public function actionLogin()
    {

        \Yii::error("Llego a la acci칩n");
        $data = \Yii::$app->getRequest()->getBodyParams();
        $model = new LoginForm();
        $mod = $model->load($data, '');
        //var_dump($model);
        if ($mod && $model->login())
        {
            $user = $model->getUser();
            /*if ($this->checkAccess) {
                call_user_func($this->checkAccess, $this->id, $user);
            }*/
            $user->usu_ulting = date('Y-m-d H:i:s');
            $user->generaToken();
            $update = $user->update();
            \Yii::trace('Actualizo: '.$update.' Token Generado: '.$user->usu_token);
            return $user;
        }
    }

    public function actionLogout()
    {
        Yii::$app->user->logout();

        return $this->goHome();
    }
}
